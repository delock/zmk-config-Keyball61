/ {
   macros {
      vimq: vimq {
         compatible = "zmk,macro";
         label = "vim quit";
         #binding-cells = <0>;
         bindings = <
            &kp COLON
            &kp Q
            &kp A
            &kp RET
         >;
      };
   };
};

/ {
   macros {
      vimw: vimw {
         compatible = "zmk,macro";
         label = "vim write";
         #binding-cells = <0>;
         bindings = <
            &kp COLON
            &kp W
            &kp A
            &kp EXCL
            &kp RET
         >;
      };
   };
};
